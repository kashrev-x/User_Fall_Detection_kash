<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/title_activity_settings">

    <EditTextPreference
        android:key="@string/companion_phonenumber"
        android:title="@string/companion_phonenumber_title"
        android:defaultValue=""
        android:selectAllOnFocus="true"
        android:inputType="phone"
        android:singleLine="true"/>

    <EditTextPreference
        android:key="@string/threshold_value"
        android:title="@string/threshold_value_title"
        android:defaultValue="500"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true" />

    <ListPreference
        android:key="@string/notification_method"
        android:title="@string/notificaiton_method_title"
        android:defaultValue="SMS"
        android:entries="@array/pref_default_notification_values"
        android:entryValues="@array/pref_default_notification_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>